---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.name }}</title>
  <link rel="alternate" type="text/html" href="{{ site.url }}" />
  <link rel="self" type="application/atom+xml" href="{{ site.url }}/posts.xml" />
  <id>{{ site.url }}/posts.xml</id>
  <updated>{{ site.time |date_to_xmlschema }}</updated>
  <subtitle>Bounga writing about Ruby, Rails, MooTools and Objective-C</subtitle>

  {% for post in site.posts limit:15 %}
  <entry>
    <title>{{ post.title }}</title>
    <link rel='alternate' type='text/html' href='{{ post.url }}' />
    <id>tag:bounga.org:{{ post.id }}</id>
    <updated>{{ post.date | date.getutc:"%Y-%m-%dT%H:%M:00Z" }}</updated>

    <author>
      <name>Nicolas Cavigneaux</name>
      <uri>{{ site.url }}</uri>
      <email>nico@bounga.org</email>
    </author>

    <summary>{{ post.content | html_truncatewords:50 }}</summary>
    <content type='html' xml:lang='en' xml:base='{{ site.url }}'>
      {{ post.content }}
    </content>
  </entry>
  {% endfor %}
</feed>
